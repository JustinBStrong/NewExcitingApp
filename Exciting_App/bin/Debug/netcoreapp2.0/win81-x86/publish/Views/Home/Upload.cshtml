@{
    ViewData["Title"] = "Upload";
}
<h2>App To Node True Up</h2>
<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="">
    <label>Select the Excel files to upload and input the indexs of the apps GSI ID and node name. Indexes start at 0.</label>
    <div class="form-group">
        <div class="col-md-10">
            <label for="CMDB">Excel file(.xls): </label><input type="file" name="CMDB" />
            <label for="CMDBSourceName">Source Name: </label><input type="text" name="CMDBSourceName" />
            <label for="CMDBSheetName">CMDB Sheet Name: </label><input type="text" name="CMDBSheetName" value="Report Results"/>
            <label for="CMDBGSIIndex">GSI ID Index:</label><input type="number" name="CMDBGSIIndex" value="1" style="width: 2em"/>
            <label for="CMDBNodeIndex">Node Index:  </label><input type="number" name="CMDBNodeIndex" value="4" style="width: 2em"/>
            <br>
        </div>
        <div class="col-md-10">
            <br>
            <label for="DataMart">DataMart Files(.xls):</label><input type="file" name="DataMart" />
            <label for="DataMartSourceName">Source Name: </label><input type="text" name="DataMartSourceName" />
            <label for="DataMartSheetName">DataMart Sheet Name: </label><input type="text" name="DataMartSheetName" value="Query" />
            <label for="DataMartGSIIndex">GSI ID Index:</label><input type="number" name="DataMartGSIIndex" value="0" style="width: 2em"/>
            <label for="DataMartNodeIndex">Node Index:  </label><input type="number" name="DataMartNodeIndex" value="1" style="width: 2em"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
